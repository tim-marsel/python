print("Ветвление! Проверка на True or False.")
apples = 10
print(apples < 20 and apples > 5)
print(apples < 10 and apples > 5)
print(apples <= 20 and apples > 5)
print(apples < 3 and apples > 7)
print(apples < 3 and apples > 15)
print(apples < 3 and apples > 10)
print(not(apples < 3))
print("Если нет скобок, то сначала выполняется отрицание (not)!")
print(not apples < 20 or apples > 5)
print("Трям!")
print(not apples < 3 or apples <15 and apples > 5)
print(not (apples < 3 or apples < 15) and apples > 5)


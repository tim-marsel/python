def hello():
    print("Дратути, " + username.title() + ". Давай немножко попитоним!")
    age = input("Вам есть 18 лет? Напиши  \"да\" или \"нет\": ")
    if age == "да":
        print("Понеслась!")
    elif age == "нет":
        print("Заходишь на свой страх и риск!")
    else:
        print("Ни да, ни нет... странный ты человек.")


